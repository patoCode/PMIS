<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>PMIS - ENDE</title>
		<%- include('../partials/datatable/datatable.css.ejs') %>
	</head>

	<body class="nav-md">
		<div class="container body">
			<div class="main_container">
				<%- include('../user/menu', {menu: session.menu, user: session.user}) %>
				<%- include('../partials/top-nav', {user: session.user}) %>

				<!-- MAIN BODY -->
				<div class="right_col">
					<div class="row">
						<div class="col-md-4 col-xs-6">
							<%- include('form') %>
						</div>
						<div class="col-md-8 col-xs-6">
							<div class="x_content">
								<p>
									<%= title%>
								</p>

								<div class="table-responsive">
									<table class="table table-striped jambo_table bulk_action">
										<thead>
											<tr class="headings">
												<th>
													<input type="checkbox" id="check-all" class="flat" />
												</th>
												<!--
													id_variable, id_archivo, id_unidad, id_formato, nombre,
													descripcion, label, codigo, requerida, estatica, formula, operable,
													"table", orden, estado,
													usuario_mod, fecha_mod, estado_reg
												 -->
												<th class="column-title">Nombre</th>
												<th class="column-title">Descripcion</th>
												<th class="column-title">Codigo</th>
												<th class="column-title">Orden</th>
												<th class="column-title">Estado</th>
												<th class="column-title">Obligatorio</th>
												<th class="column-title">Etiqueta</th>
												<th class="column-title">Tipo</th>
												<th class="column-title">Formato</th>
												<th class="column-title">Unid.</th>
												<th class="column-title">File*</th>

												<th class="column-title no-link last">
													<span class="nobr">Action</span>
												</th>
												<th class="bulk-actions" colspan="7">
													<a class="antoo" style="color:#fff; font-weight:500;"
														>Bulk Actions ( <span class="action-cnt"> </span> )
														<i class="fa fa-chevron-down"></i
													></a>
												</th>
											</tr>
										</thead>

										<tbody>
											<%
											var count = 0
											session.list.forEach(function(variable){ %>
											<tr class="<% if(count%2 == 0) {%>even<% }else{%>odd<% }%> pointer">
												<td class="a-center ">
													<input
														type="checkbox"
														class="flat"
														name="table_records"
													/>
												</td>
												<td class=" "><%= variable.nombre %></td>
												<td class=" "><%= variable.descripcion %></td>
												<td class=" "><%= variable.codigo %></td>
												<td class=" "><%= variable.orden %></td>
												<td class=" "><%= variable.estado %></td>
												<td class="a-right a-right "><%= variable.requerida %></td>
												<td class="a-right a-right "><%= variable.label %></td>
												<td class="a-right a-right ">TIPO</td>
												<td class="a-right a-right "><%= variable.id_formato %></td>
												<td class="a-right a-right "><%= variable.id_unidad %></td>
												<td class="a-right a-right "><%= variable.id_archivo %></td>
												<td class=" last"><a href="#">View</a></td>
											</tr>
											<% })%>
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- END MAIN BODY -->
			</div>
		</div>
		<%- include('../partials/datatable/datatable.js.ejs') %>
	</body>
</html>
